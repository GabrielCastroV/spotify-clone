---
// import MusicsTable from "@/components/MusicsTable.astro";
import BackButton from "../../components/BackButton.astro";
import { CardPlayButton } from "../../components/CardPlayButton";
import MusicsTable from "../../components/MusicsTable.astro";
import Layout from "../../layouts/Layout.astro";
// import { CardPlayButton } from "../../components/CardPlayButton";
import { allPlaylists, songs } from "../../lib/data";

const { id } = Astro.params;

const playlist = allPlaylists.find((playlist) => playlist.id === id);
const playListSongs = songs.filter(
    (song) => song.albumId === playlist?.albumId,
);
---

<Layout title=`Playlist: ${playlist?.title}`>
    <div
        id="playlist-container"
        class="relative flex flex-col h-full md:bg-zinc-900 overflow-x-hidden"
        transition:name=`playlist ${id} box`
    >
        <!-- <PageHeader /> -->

        <header
            class="flex flex-col items-center md:justify-start md:flex-row gap-2 md:gap-8 md:px-6 mt-8 md:mt-12"
        >
            <a href="/" class="md:hidden self-start px-4">
                <BackButton />
            </a>
            <picture class="aspect-square w-52 h-52">
                <img
                    src={playlist?.cover}
                    alt={`Cover of ${playlist?.title}`}
                    class="object-cover w-full h-full shadow-lg"
                    transition:name=`playlist ${playlist?.id} image`
                />
            </picture>

            <div
                class="flex flex-col md:justify-between items-center md:items-start"
            >
                <h2 class="flex flex-1 items-end text-white">Playlist</h2>
                <div>
                    <h1 class="md:text-5xl text-3xl font-bold block text-white">
                        {playlist?.title}
                        <span transition:name=`playlist ${playlist?.id} title`
                        ></span>
                    </h1>
                </div>

                <div class="flex-1 flex p-2 md:p-0 md:items-end items-center">
                    <div
                        class="text-sm text-gray-300 font-normal flex flex-col items-center md:items-start"
                    >
                        <div transition:name=`playlist ${playlist?.id} artist`>
                            <span>{playlist?.artists.join(", ")}</span>
                        </div>
                        <p class="mt-1">
                            <span class="text-white"
                                >{playListSongs.length} songs</span
                            >, 3 h aprox
                        </p>
                    </div>
                </div>
            </div>
        </header>

        <div
            class="p-6 pb-0 w-full text-white flex justify-center md:justify-start"
        >
            <CardPlayButton client:load id={id} size="large" display={"p-4"} />
        </div>

        <div
            class="absolute inset-0 md:bg-gradient-to-t from-zinc-900 via-zinc-900/80 -z-[1]"
        >
        </div>

        <section class="md:p-6">
            <MusicsTable songs={playListSongs} />
        </section>
    </div>
</Layout>
