---
import { type Playlist } from "../lib/data";

interface Props {
    playlist: Playlist;
}

const { playlist } = Astro.props;

const { albumId, artists, color, cover, id, title } = playlist;

const artistsString = artists.join(", ");
---

<a
    href={`/playlist/${id}`}
    class="playlist-item text-white flex relative p-2 items-center gap-5 rounded-md hover:bg-[#1A1A1A]"
>
    <picture class="h-12 w-12 flex-none">
        <img
            src={cover}
            alt={`Cover of ${title} by ${artistsString}`}
            class="object-cover w-full h-full rounded-md"
        />
    </picture>

    <div class="flex flex-auto flex-col truncate">
        <h4 class="">{title}</h4>
        <span class="text-[#A4A4A4] text-[14px]">{artistsString}</span>
    </div>
</a>
